{
    "swagger": "2.0",
    "info": {
      "title": "API de Cadastro de Usuários",
      "version": "1.0.0"
    },
    "paths": {
      "/users": {
        "get": {
          "summary": "Lista todos os usuários",
          "responses": {
            "200": {
              "description": "Lista de usuários"
            }
          }
        },
        "post": {
          "summary": "Cadastra um novo usuário",
          "parameters": [
            {
              "in": "body",
              "name": "user",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Usuário criado"
            }
          }
        }
      }
    }
  }